DESCRIPTION="Fortran to C stub library"
HOMEPAGE="http://www.netlib.org/f2c/"
SRC_URI="ftp://netlib.bell-labs.com/netlib/f2c/${PN}.zip"
PATCH_URI="mirror://portage/dev-libs/${PN}/files/${PV}-add-ofiles-dep.patch"
SRC_DIR="${PN}"

src_compile() {
	lndirs
	cd ${B}
	# undefined reference to _MAIN__
	cygmake -f makefile.u CFLAGS="${CFLAGS}" all # libf2c.so
}

src_install() {
	cd ${B}
#	dobin *.dll
	dolib libf2c.a # libf2c.dll.a
	dodoc README Notice

	insinto /usr/include
	doins f2c.h
}
